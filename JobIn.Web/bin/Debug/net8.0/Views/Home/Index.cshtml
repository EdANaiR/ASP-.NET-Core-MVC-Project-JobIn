@model List<JobPostingDto>

    <!-- Banner Section -->
    <section class="banner_part">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-xl-6">
                    <div class="banner_text">
                        <div class="banner_text_iner">
                            <h2>Türkiye'nin Öğrenci ve Mezun Platformu</h2>
                            <br />
                            <h1>Kariyerini İnşa Et</h1>
                            <p>JobIn ile hayalindeki kariyere adım at. İş fırsatları, staj imkanları ve daha fazlası seni bekliyor.</p>
                            <a href="#jobs" class="btn_1">Keşfet</a>
                            <a href="/Account/Register" class="btn_2">Profilini Oluştur</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-xl-6">
                    <!-- Banner görseli için alan - eğer görseli varsa ekleyebilirsiniz -->
                    <div class="banner_image">
                        <!-- <img src="~/JobIn-Post/img/banner-image.png" alt="JobIn Platform" class="img-fluid"> -->
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Job Listings Section -->
    <section class="job_listings" id="jobs">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="section_tittle text-center mb-5">
                        <h2>Son İş İlanları</h2>
                        <p>En güncel iş fırsatlarını keşfedin ve kariyerinizi şekillendirin</p>
                    </div>
                </div>
            </div>

            <div class="row">
                @if (Model != null && Model.Any())
            {
                foreach (var jobPosting in Model)
                {
                <div class="col-12 col-lg-6 col-xl-4 mb-4">
                    <div class="event-card h-100">
                        <a href="/JobPostings/Detail/@jobPosting.Id" class="event-card-image">
                            @if (!string.IsNullOrEmpty(jobPosting.Imagge))
                                {
                            <img src="~/JobIn-Post/img/ilan/@jobPosting.Imagge" alt="@jobPosting.Title" class="card-img-top" style="height: 200px; object-fit: cover;">
                                }
                                else
                                {
                            <img src="~/JobIn-Post/img/default-job.jpg" alt="@jobPosting.Title" class="card-img-top" style="height: 200px; object-fit: cover; background-color: #f8f9fa;">
                                }
                        </a>

                        <div class="card-body d-flex flex-column">
                            <h5 class="mt-3 mb-3">
                                <a href="/JobPostings/Detail/@jobPosting.Id" class="text-decoration-none">
                                    @jobPosting.Title
                                </a>
                            </h5>

                            <p class="card-text flex-grow-1">
                                @(jobPosting.Advert?.Length > 100 ? jobPosting.Advert.Substring(0, 100) + "..." : jobPosting.Advert)
                            </p>

                            <div class="job-meta mb-3">
                                <span class="event-card-type badge bg-primary me-2">@jobPosting.CreatedBy</span>
                                <span class="event-card-type badge bg-secondary">@jobPosting.JobType</span>
                            </div>

                            <ul class="event-card-info list-unstyled">
                                <li class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Son Başvuru:</span>
                                    <strong>@(string.IsNullOrEmpty(jobPosting.Deadline) ? "Belirtilmemiş" : jobPosting.Deadline)</strong>
                                </li>
                                <li class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Başlangıç:</span>
                                    <strong>@(string.IsNullOrEmpty(jobPosting.CreatedDate) ? "Belirtilmemiş" : jobPosting.CreatedDate)</strong>
                                </li>
                                <li class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Bitiş:</span>
                                    <strong>@(string.IsNullOrEmpty(jobPosting.JobDeadline) ? "Belirtilmemiş" : jobPosting.JobDeadline)</strong>
                                </li>
                            </ul>

                            <div class="mt-auto">
                                <a href="/JobPostings/Detail/@jobPosting.Id" class="primary-button primary-button--big w-100 text-center text-decoration-none">
                                    <span>Detaylı Bilgi</span>
                                    <i class="ri-arrow-right-s-line ms-1"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="alert alert-info text-center py-5">
                        <h4>Henüz İş İlanı Bulunmuyor</h4>
                        <p class="mb-0">Yakında yeni iş fırsatları yayınlanacak, takipte kalın!</p>
                    </div>
                </div>
            }
            </div>

            @if (Model != null && Model.Count() > 6)
        {
            <div class="row">
                <div class="col-12 text-center mt-4">
                    <a href="/JobPostings" class="btn btn-outline-primary btn-lg">
                        Tüm İş İlanlarını Gör
                        <i class="ri-arrow-right-line ms-1"></i>
                    </a>
                </div>
            </div>
        }
        </div>
    </section>

    <!-- Features Section (Opsiyonel) -->
    <section class="features_section py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="feature_item text-center p-4">
                        <div class="feature_icon mb-3">
                            <i class="fas fa-briefcase fa-3x text-primary"></i>
                        </div>
                        <h4>İş İlanları</h4>
                        <p>En güncel ve kaliteli iş fırsatlarını keşfedin</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="feature_item text-center p-4">
                        <div class="feature_icon mb-3">
                            <i class="fas fa-graduation-cap fa-3x text-primary"></i>
                        </div>
                        <h4>Staj Programları</h4>
                        <p>Kariyerinizin temelini atan staj imkanları</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="feature_item text-center p-4">
                        <div class="feature_icon mb-3">
                            <i class="fas fa-users fa-3x text-primary"></i>
                        </div>
                        <h4>Bootcamp</h4>
                        <p>Yeteneklerinizi geliştiren eğitim programları</p>
                    </div>
                </div>
            </div>
        </div>
    </section>