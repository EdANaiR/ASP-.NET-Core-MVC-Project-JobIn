@* ﻿@using JobIn.Web.Consts *@
@model List<JobPostingDto>
<head></head>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">İlan Yönetimi /</span> İlanlar
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="table-responsive text-nowrap m-5">

            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="JobPosting" asp-action="Add">
                İlan Ekle <i class="bx bx-plus "></i>
            </a>


         
            <table class="table table-bordered " id="jobPostingsTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Başlık</th>                  
                        <th>Kategori</th>
                        <th>İş Modeli</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>İşlemler</th>
                        
                    </tr>
                </thead>
               
                <tbody class ="table-border-bottom-0">
                    @foreach (var jobPosting in Model)
                    {
                        <tr name="@jobPosting.Id">
                            <td>@jobPosting.Title</td>
                            <td>@jobPosting.Category.Name</td>
                            <td>@jobPosting.JobType</td>
                            <td>@jobPosting.CreatedDate.ToShortDateString()</td>
                            <td>@jobPosting.CreatedBy</td>

                            <td>

                                <a class="btn btn-primary btn-sm" data-id="@jobPosting.Id" asp-area="Admin" asp-controller="jobPosting" asp-action="Update" ><i class="bx bxs-edit"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@jobPosting.Id" asp-area="Admin" asp-controller="jobPosting" asp-action="Delete"><i class="bx bx-minus-circle"></i></a>

                            </td>

                                 
                               
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
   




</div>

@section Scripts {
    <script src="~/js/jobPostingIndex.js" type="application/ecmascript"></script>
}